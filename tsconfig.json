{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "src",
        "baseUrl": "./",
        "paths": {
            "*": [
                "./types/*"
            ]
        }
    },
    "typeRoots": [
        "./node_modules",
        "./node_modules/@types",
    ],
    "include": [
        "src/**/*.ts",
    ]
}